{
  "description": "Left on Read",
  "keywords": [
    "electron",
    "iMessage",
    "analytics",
    "open-source",
    "text",
    "chat"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Left-on-Read/leftonread.git"
  },
  "license": "MIT",
  "author": {
    "name": "Left on Read",
    "email": "help.leftonread@gmail.com",
    "url": "https://leftonread.me"
  },
  "contributors": [
    {
      "name": "Teddy Ni",
      "url": "https://github.com/Teddarific"
    },
    {
      "name": "Alexander Danilowicz",
      "url": "https://github.com/alexdanilowicz"
    }
  ],
  "main": "./src/main/main.ts",
  "scripts": {
    "build": "concurrently \"yarn build:main\" \"yarn build:renderer\"",
    "build:beta": "IS_BETA=true yarn build",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && yarn build && electron-builder build --publish never",
    "package:beta": "IS_BETA=true yarn package",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && yarn start:renderer",
    "start:debug": "cross-env DEBUG=true ts-node ./.erb/scripts/check-port-in-use.js && yarn start:renderer-debug",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:main-debug": "cross-env DEBUG=true NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "start:renderer-debug": "cross-env DEBUG=true NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "test": "jest",
    "release:patch": "node release.js patch",
    "release:minor": "node release.js minor",
    "release:major": "node release.js major"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "browserslist": [],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "release/app/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy",
      "@fontsource/montserrat": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.erb/scripts/check-build-exists.ts"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "release/app/dist"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(uuid)|your-package-here)"
    ]
  },
  "dependencies": {
    "@amplitude/node": "^1.10.0",
    "@chakra-ui/icons": "^2.0.4",
    "@chakra-ui/react": "^2.2.4",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@fontsource/montserrat": "^4.5.11",
    "@palette.dev/electron": "^1.16.0",
    "@palette.dev/webpack-plugin": "^1.2.2",
    "axios": "^0.27.2",
    "chart.js": "^3.8.2",
    "chartjs-plugin-datalabels": "^2.1.0",
    "chartjs-plugin-gradient": "^0.5.1",
    "classnames": "^2.3.2",
    "color-interpolate": "^1.0.5",
    "downloadjs": "^1.4.7",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.7",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.0.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "form-data": "^4.0.0",
    "framer-motion": "^6.5.1",
    "fs": "0.0.1-security",
    "html-to-image": "^1.10.8",
    "node-machine-id": "^1.1.12",
    "node-schedule": "^2.1.0",
    "nodemailer": "^6.7.7",
    "path-browserify": "^1.0.1",
    "react": "^18.1.0",
    "react-chartjs-2": "^4.3.1",
    "react-confetti": "^6.1.0",
    "react-datetime-picker": "^3.5.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.4.0",
    "react-multi-select-component": "^4.3.3",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.4.0",
    "react-social-icons": "^5.14.0",
    "react-type-animation": "^2.1.1",
    "recursive-copy": "^2.0.14",
    "semver": "^7.3.7",
    "sentiment": "^5.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@leftonread/eslint-config": "file:../eslint-config",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.6",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/chart.js": "^2.9.37",
    "@types/downloadjs": "^1.4.3",
    "@types/jest": "^27.5.1",
    "@types/node": "17.0.33",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^18.0.9",
    "@types/react-datetime-picker": "^3.4.1",
    "@types/react-dom": "^18.0.4",
    "@types/react-icons": "^3.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "@types/sentiment": "^5.0.1",
    "@types/sqlite3": "^3.1.8",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/uuid": "^8.3.4",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^7.1.0",
    "core-js": "^3.22.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "detect-port": "^1.3.0",
    "electron": "^18.2.3",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.1",
    "electron-rebuild": "^3.2.7",
    "electronmon": "^2.0.2",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-erb": "^4.0.3",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "json-bump": "^1.0.2",
    "lint-staged": "^12.4.1",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.2",
    "react-refresh": "^0.13.0",
    "react-test-renderer": "^18.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "simple-git": "^3.12.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "productName": "Left on Read",
    "appId": "com.northpark.leftonread",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "Left-on-Read",
      "repo": "leftonread",
      "vPrefixedTagName": true
    }
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/*"
    ],
    "logLevel": "quiet"
  }
}
