{
  "plugins": ["simple-import-sort"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": ["@leftonread/eslint-config", "plugin:react/recommended"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/display-name": "off",
    "simple-import-sort/imports": "error"
  }
}
